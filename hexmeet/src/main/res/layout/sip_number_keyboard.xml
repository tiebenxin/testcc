<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="1"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="2"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="3"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="4"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="5"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="6"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="7"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="8"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="9"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="*"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:text="0"
            android:textColor="@drawable/popup_key_label"
            android:textSize="23sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <LinearLayout
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/backspace_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#0fff"
                android:scaleType="fitCenter"
                android:src="@drawable/key_backspace" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e1e1e1"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/join_via_video"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/video_call_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="#0fff"
                android:scaleType="fitCenter"
                android:src="@drawable/key_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_via_video"
                android:textColor="#2bbb6a"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <LinearLayout
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/exit_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="#0fff"
                android:scaleType="fitCenter"
                android:src="@drawable/key_exit_red" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <LinearLayout
            android:id="@+id/join_via_audio"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/popup_key_bkg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/audio_call_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="#0fff"
                android:scaleType="fitCenter"
                android:src="@drawable/key_audio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/join_via_audio"
                android:textColor="#1f9ee6"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>