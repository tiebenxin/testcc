<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lensim.fingerchat.hexmeet.widget.FloatLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lensim.fingerchat.hexmeet.widget.VideoBoxGroup
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.lensim.fingerchat.hexmeet.widget.FloatLayout>

    <ImageView
        android:id="@+id/audio_only_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/background_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccffffff"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/meeting_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="14"
        android:singleLine="true"
        android:textColor="#313131"
        android:textSize="23sp"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/bkg_avatar_circle"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:alpha="0.4"
            android:background="@drawable/bkg_avatar_circle"/>

        <com.lensim.fingerchat.hexmeet.widget.MLRoundedImageView
            android:id="@+id/conn_to_avatar"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_contact"/>

        <TextView
            android:id="@+id/conn_to_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/conn_to_avatar"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:textColor="#313131"
            android:textSize="23sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/audio_only_use_earphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_layout"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/audio_only_use_earphone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/audio_only_use_earphone"
            android:textColor="#54a8f0"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mute_on_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@id/avatar_layout"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@drawable/rounded_rect_fill_no_stroke"
            android:text="@string/audio_only_mute_on"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </LinearLayout>

    <include
        android:id="@+id/include1"
        layout="@layout/conversation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerInParent="true"/>

    <include
        android:id="@+id/include2"
        layout="@layout/conversation_toolbar_top"/>

    <include
        android:id="@+id/include3"
        layout="@layout/conversation_toolbar_bottom"/>

    <Chronometer
        android:id="@+id/timer_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#313131"
        android:textSize="13sp"
        android:visibility="gone"/>

    <SurfaceView
        android:id="@+id/dummyPreviewView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/local_float_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:alpha="0.9"
        android:background="@drawable/bkg_circle"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_mini"/>

    <ImageButton
        android:id="@+id/remote_float_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:alpha="0.9"
        android:background="@drawable/bkg_circle"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_mini"/>

</RelativeLayout>
