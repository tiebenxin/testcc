<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper" />

    <ImageView
        android:id="@+id/background_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#ccffffff" />

    <ImageView
        android:id="@+id/anim"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/bkg_avatar_circle"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:alpha="0.4"
            android:background="@drawable/bkg_avatar_circle" />

        <com.lensim.fingerchat.hexmeet.widget.MLRoundedImageView
            android:id="@+id/conn_to_avatar"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/icon_contact" />

        <TextView
            android:id="@+id/conn_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conn_to_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:textColor="#313131"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/endcall_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_reject" />

        <TextView
            android:id="@+id/endcall_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/end_call"
            android:textColor="#313131"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
