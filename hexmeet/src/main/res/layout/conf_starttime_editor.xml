<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="284dp"
        android:background="@drawable/rounded_time_editor"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_rect_fill_color"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="#313131"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:textColor="#313131"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#f4f4f4" />

            <com.lensim.fingerchat.hexmeet.widget.wheel.WheelView
                android:id="@+id/month"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <com.lensim.fingerchat.hexmeet.widget.wheel.WheelView
                android:id="@+id/day"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <com.lensim.fingerchat.hexmeet.widget.wheel.WheelView
                android:id="@+id/hour"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <com.lensim.fingerchat.hexmeet.widget.wheel.WheelView
                android:id="@+id/minute"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="#f4f4f4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="90dp"
                android:layout_height="37dp"
                android:background="@drawable/rounded_rect_frame_fill_color"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="#919191"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ok"
                android:layout_width="90dp"
                android:layout_height="37dp"
                android:layout_marginStart="37dp"
                android:background="@drawable/rounded_rect_frame_fill_color"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="#f04848"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>