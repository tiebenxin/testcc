<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:background="@drawable/img_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/back"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/delete_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/delete"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/background"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bkg_translucent_circle"/>

            <com.lensim.fingerchat.hexmeet.widget.MLRoundedImageView
                android:id="@+id/contact_headPicture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/contact"
                android:src="@drawable/icon_contact"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/rl_background"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxEms="14"
                android:singleLine="true"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="0.1dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_account"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_account"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/icon_account"
            android:text="@string/account"
            android:textColor="#313131"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="#919191"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="#f1f1f1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_video"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_video"/>

        <TextView
            android:id="@+id/tv_weishi_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/icon_video"
            android:text="@string/call_num"
            android:textColor="#313131"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/weishi_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="#919191"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="#f1f1f1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/icon_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_phone"/>

        <TextView
            android:id="@+id/tv_contact_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/icon_phone"
            android:text="@string/mobile"
            android:textColor="#313131"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/contact_cellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="#919191"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="#f1f1f1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_email"/>

        <TextView
            android:id="@+id/tv_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/icon_email"
            android:text="@string/email"
            android:textColor="#313131"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="#919191"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="#f1f1f1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/icon_telephone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_telephone"/>

        <TextView
            android:id="@+id/tv_contact_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/icon_telephone"
            android:text="@string/telephone"
            android:textColor="#313131"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/contact_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="#919191"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="#f1f1f1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="1px"
            android:background="#e1e1e1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/start_video_communication_btn"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@drawable/contact_btn_bkg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/video_call_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#0fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/key_video"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/video_call_btn"
                    android:text="@string/video_call"
                    android:textColor="#2bbb6a"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/button_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#e1e1e1"/>

            <LinearLayout
                android:id="@+id/start_audio_communication_btn"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@drawable/contact_btn_bkg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/audio_call_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#0fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/key_audio"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/audio_call_btn"
                    android:text="@string/audio_call"
                    android:textColor="#1f9ee6"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>