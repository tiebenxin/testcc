<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.lensim.fingerchat.commons.toolbar.FGToolbar
            android:id="@+id/toolbar"
            style="@style/FGToolbarStyleWithNoOverflow"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/default_avatar"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_below="@+id/iv_avatar"
                android:gravity="center"
                android:text="@string/permit_login_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/dimen_16_sp"/>

            <TextView
                android:id="@+id/tv_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_40"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_text_bg"
                android:gravity="center"
                android:text="@string/permit_login"
                android:textSize="@dimen/dimen_18"/>

        </RelativeLayout>
    </LinearLayout>
</layout>