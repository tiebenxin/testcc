<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/white"
        android:orientation="vertical">

            <ImageView
              android:id="@+id/circle_theme"
              android:layout_width="match_parent"
              android:layout_height="220dp"
              android:background="@drawable/pengyouquan_theme"
              android:scaleType="centerCrop" />

            <ImageView
              android:id="@+id/circle_item_head"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_marginBottom="15dp"
              android:layout_marginRight="25dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:background="@color/secondary_text" />
            <TextView
              android:id="@+id/circle_change_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="@string/click_to_change_theme" />
            <TextView
              android:id="@+id/circle_username"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="55dp"
              android:layout_marginRight="105dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:textColor="@color/white"
              android:textSize="16sp" />


            <LinearLayout
              android:id="@+id/ll_CircleNewMessage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:background="@drawable/bubble_fri"
              android:clickable="true"
              android:orientation="horizontal">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="6dp"
                  android:padding="1dp"
                  android:background="@color/bbwhite"
                  android:gravity="center_vertical">
                  <ImageView
                    android:id="@+id/img_new_circle_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/head_fri" />
                </LinearLayout>

                <TextView
                  android:id="@+id/mCircleNewMessage"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:text="155条信息"
                  android:textColor="@color/white"
                  android:textSize="14sp" />
              </LinearLayout>

            </LinearLayout>

    </RelativeLayout>

</layout>