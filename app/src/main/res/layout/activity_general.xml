<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_adjust_textsize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="字体大小"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:gravity="fill_vertical"
        android:background="@color/white"/>
    <include layout="@layout/layout_divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:text="使用扬声器播放语音" />

        <com.lensim.fingerchat.fingerchat.ui.settings.SwitchButton
            android:id="@+id/btn_switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:slide_button="@drawable/slide_button"
            app:switch_background="@drawable/switch_background"
            app:switch_state="false" />
    </RelativeLayout>
    <include layout="@layout/layout_divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:text="回车时发生消息" />

        <com.lensim.fingerchat.fingerchat.ui.settings.SwitchButton
            android:id="@+id/btn_switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:slide_button="@drawable/slide_button"
            app:switch_background="@drawable/switch_background"
            app:switch_state="false" />
    </RelativeLayout>
    <include layout="@layout/layout_divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:text="接送对方发送的抖动" />

        <com.lensim.fingerchat.fingerchat.ui.settings.SwitchButton
            android:id="@+id/btn_switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:slide_button="@drawable/slide_button"
            app:switch_background="@drawable/switch_background"
            app:switch_state="false" />
    </RelativeLayout>
    <include layout="@layout/layout_divider" />
    <TextView
        android:id="@+id/tv_select_voice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="选择抖动铃声"
        android:textColor="#000"
        android:paddingLeft="8dp"
        android:gravity="fill_vertical"
        android:background="@color/white"/>
</LinearLayout>
