<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_32"
    android:layout_marginTop="@dimen/dimen_8"
    android:layout_marginBottom="@dimen/dimen_8"
    android:layout_marginLeft="@dimen/dimen_12"
    android:layout_marginRight="@dimen/dimen_12"
    android:layout_gravity="center_vertical"
    android:background="@drawable/shape_loginout_bg_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/iv_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dimen_5"
      android:src="@drawable/ic_search" />

    <EditText
      android:id="@+id/et_search"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/dimen_5"
      android:background="@null"
      android:hint="@string/search_contact"
      android:imeActionLabel="@string/search"
      android:imeOptions="actionSearch"
      android:inputType="text"
      android:singleLine="true"
      android:textColor="@color/black"
      android:textColorHint="#cccccc"
      android:textSize="@dimen/dimen_12_sp" />

    <ImageView
      android:id="@+id/iv_clear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/dimen_5"
      android:src="@drawable/search_delete"
      android:visibility="gone" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_search_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="@dimen/dimen_12"
    android:layout_marginRight="@dimen/dimen_12"
    android:padding="8dp"
    android:background="@drawable/search_addfrined_bg"
    android:orientation="horizontal"
    android:visibility="visible">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:drawableLeft="@drawable/search_friend"
      android:gravity="center_vertical"
      android:text="@string/search"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/tv_search_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="center_vertical"
      android:gravity="center_vertical"
      android:textColor="#0f0"
      android:textSize="18sp" />

  </LinearLayout>


</LinearLayout>