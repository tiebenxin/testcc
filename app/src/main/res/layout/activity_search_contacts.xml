<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">


  <com.lensim.fingerchat.commons.toolbar.FGToolbar
      android:id="@+id/viewTitleBar"
      style="@style/FGToolbarStyle"/>

  <include
    android:id="@+id/viewSearch"
    layout="@layout/layout_search_contacts" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include android:id="@+id/viewNoRecord"
            layout="@layout/layout_no_records"/>

    </RelativeLayout>



</LinearLayout>