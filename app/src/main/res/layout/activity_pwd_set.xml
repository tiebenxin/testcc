<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入四位密码"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:textColor="#999999"/>
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_below="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/etPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:maxLength="4"
                android:background="@null"
                android:textColor="@color/black"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"/>
            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="43dp"
                android:layout_gravity="center_horizontal"/></FrameLayout>
        <TextView
            android:id="@+id/chanceCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="密码不正确，您还有4次机会"
            android:textColor="#FF00"
            android:layout_below="@+id/frameLayout"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/confirmPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="请再输入一次密码"
            android:textColor="#999999"
            android:layout_below="@+id/frameLayout"
            android:visibility="gone"/>
        <com.lensim.fingerchat.fingerchat.ui.secretchat.widget.NumberKeyboardView
            android:id="@+id/am_nkv_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
