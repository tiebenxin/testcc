<?xml version="1.0" encoding="utf-8"?>
<layout >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lensim.fingerchat.fingerchat.ui.me.circle_friends.LookupCommentActivity">

        <com.lensim.fingerchat.commons.toolbar.FGToolbar
            android:id="@+id/toolbar"
            style="@style/FGToolbarStyle"/>

        <RelativeLayout
            android:id="@+id/bodyLayout_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.lensim.fingerchat.components.pulltorefresh.SwipeRefreshLayout
                android:id="@+id/mCommentRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
            </com.lensim.fingerchat.components.pulltorefresh.SwipeRefreshLayout>
        </RelativeLayout>

    </LinearLayout>

</layout>
