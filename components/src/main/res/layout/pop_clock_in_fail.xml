<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_fail_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="打卡失败"
            android:textColor="@color/clock_in_dialog_text_fail"
            android:textSize="28sp" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@drawable/clock_fail"
        android:gravity="center"></ImageView>
    <TextView
        android:id="@+id/tv_pop_clock_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="打卡遇到问题，请尝试重新打卡"
        android:textColor="@color/clock_in_dialog_address"
        android:textSize="12sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="invisible" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clock_in_dialog_divider" />
    <LinearLayout
        android:id="@+id/ll_pop_clock_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_adapter_item_bg"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我知道了"
            android:textColor="@color/clock_in_dialog_ok"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>