<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- popupwindow的动画属性-->
    <style name="PopupCommentAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <declare-styleable name="SpringView">
        <attr name="type">
            <enum name="overlap" value="0"/>
            <enum name="follow" value="1"/>
        </attr>
        <attr name="give">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="none" value="3"/>
        </attr>
        <attr format="reference" name="header"/>
        <attr format="reference" name="footer"/>
        <attr format="reference" name="leftRes"/>
        <attr format="reference" name="rightRes"/>
    </declare-styleable>


    <style name="qZonePublishProgressStyle">
        <item name="android:maxWidth">30.0dip</item>
        <item name="android:maxHeight">30.0dip</item>
        <item name="android:minWidth">30.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>

    <!-- CameraView-->
    <style name="Widget.CameraView" parent="android:Widget">
        <item name="android:adjustViewBounds">false</item>
        <item name="facing">back</item>
        <item name="aspectRatio">4:3</item>
        <item name="autoFocus">true</item>
        <item name="flash">auto</item>
    </style>

</resources>