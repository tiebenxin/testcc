<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_divider_color"
    android:orientation="vertical">

    <com.lensim.fingerchat.commons.toolbar.FGToolbar
        android:id="@+id/viewTitleBar"
        style="@style/FGToolbarStyleWithNoOverflow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:text="群聊邀请确认"
            android:textColor="@color/black_operation"
            android:textSize="17sp"/>

        <CheckBox
            android:id="@+id/group_manage_set_auto"
            style="@style/Msg_CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="11dp"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:lineSpacingExtra="2dp"
        android:text="启用后，群成员需群主确认才能邀请朋友进群。扫描二维码进群将同时停用"
        android:textColor="#474747"
        android:textSize="15sp"/>

    <RelativeLayout
        android:id="@+id/group_manage_set_role"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:text="群主管理权转让"
            android:textColor="@color/black_operation"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/right_arrow"
            android:textColor="#474747"
            android:textSize="15sp"/>
    </RelativeLayout>
</LinearLayout>