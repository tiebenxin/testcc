<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:paddingLeft="8dp"
        android:background="@color/custom_divider_color"
        android:gravity="center_vertical"
        android:text="A"
        android:textColor="#989898"
        android:textSize="13sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.lensim.fingerchat.commons.widgt.AvatarImageView
            android:id="@+id/ivHeader"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:background="@color/custom_divider_color"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_11"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/black_operation"
                    android:textSize="@dimen/dimen_16_sp"/>


                <ImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_11"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_authenticated"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_11"
                    android:singleLine="true"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/dimen_12_sp"/>

                <TextView
                    android:id="@+id/tv_dptName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_11"
                    android:singleLine="true"
                    android:textColor="@color/gray_99"
                    android:textSize="@dimen/dimen_12_sp"/>
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:clickable="false"
            android:enabled="true"
            android:visibility="visible"/>

    </LinearLayout>

    <include layout="@layout/layout_divider"/>

    <TextView
        android:id="@+id/show_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/custom_divider_color"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/color_474747"
        android:textSize="16sp"
        android:visibility="gone"/>

</LinearLayout>