<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_notify"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_36"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"/>

                <LinearLayout
                    android:id="@+id/bubble"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:background="@drawable/finger_chatfrom_bg"
                    android:minHeight="80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:paddingBottom="6dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="我是主题"
                            android:textColor="@color/comment_blue"
                            android:textSize="@dimen/normal_text_size"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/divider"/>

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/iv_oa_secre"
                            android:padding="6dp"
                            android:minWidth="50dp"
                            android:text="dsfqwegerqgsdffewSA"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/small_text_size"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:layout_below="@id/head_container"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="240dp"
                android:minWidth="@dimen/dimen_40"
                android:text="xxx"
                android:textSize="@dimen/min_text_size"
                android:visibility="gone"/>

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_check"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/check_box"
                />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>