<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_new"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_time"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_notify"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_5">
            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_36"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"/>
                <RelativeLayout
                    android:id="@+id/bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_gravity="start"
                    android:layout_toRightOf="@id/ll_root"
                    android:background="@drawable/finger_chatfrom_bg"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/iv_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="12dp"
                        android:src="@drawable/ease_chatfrom_voice_playing"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_unread"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/ll_root"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/ll_root"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_length"
                    style="@style/chat_text_name_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_alignTop="@+id/ll_root"
                    android:layout_toRightOf="@+id/ll_root"
                    android:gravity="center"
                    android:text="3&apos;&apos;"/>

                <ImageView
                    android:id="@+id/iv_unread_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignTop="@id/ll_root"
                    android:layout_toRightOf="@id/tv_length"
                    android:src="@drawable/ease_voice_unread"/>

            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ll_unread"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:layout_below="@id/ll_root"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="240dp"
                android:minWidth="@dimen/dimen_40"
                android:text="xxx"
                android:textSize="@dimen/dimen_12_sp"
                android:visibility="visible"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_check"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/check_box"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>