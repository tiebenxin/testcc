<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_new"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_time"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/notify"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/el_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_5">
            <LinearLayout
                android:id="@+id/ll_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_36"
                    android:layout_gravity="bottom"
                    android:background="@android:color/transparent"/>
                <RelativeLayout
                    android:id="@+id/bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@id/ll_root"
                    android:paddingRight="14dp"
                    android:background="@drawable/finger_chatfrom_bg">
                    <ImageView
                        android:id="@+id/iv_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/unread_icon"/>
                    <TextView
                        android:id="@+id/tv_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_lock"
                        android:gravity="center"
                        android:text="未读"
                        android:textColor="#3badfc"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/head_container"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/head_container"
                    android:gravity="center_vertical"
                    android:visibility="invisible">
                    <TextView
                        android:id="@+id/tv_length"
                        style="@style/chat_text_name_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_alignTop="@+id/head_container"
                        android:layout_toRightOf="@+id/head_container"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/iv_unread_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignTop="@id/head_container"
                        android:layout_toRightOf="@id/tv_length"
                        android:src="@drawable/ease_voice_unread"
                        android:visibility="invisible"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_3"
                android:layout_below="@id/ll_root"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="240dp"
                android:minWidth="@dimen/dimen_40"
                android:text="xxx"
                android:textSize="@dimen/min_text_size"
                android:visibility="visible"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_check"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/check_box"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>